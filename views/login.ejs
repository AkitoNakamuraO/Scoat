  </head>
  <body>
    <nav class="navbar navbar-dark bg-primary mb-5">
      <a href="/" class="navbar-brand">Scoat</a>
    </nav>
    <div class="container Login">
      <%- include("login_error",{locationErrors: locationErrors, mailErrors: mailErrors, passErrors:passErrors}); %>
      <form action="/admins/login" method="POST">
        <div id="locationPart"></div>
        <div class="form-group">
          <label for="mail">管理者メールアドレス</label>
          <input type="text" class="form-control" id="mail" name="mail" placeholder="abcde@xxx.com" />
        </div>
        <div class="form-group">
          <label for="password">管理者パスワード</label>
          <input type="text" class="form-control" id="password" name="password" placeholder="＊＊＊＊＊" />
        </div>
        <button class="loginBtn btn btn-primary" type="submit">ログイン</button>
      </form>
      <!-- まだ途中 -->
      <!-- <button class="repassBtn" type="submit">パスワードを忘れた方</button> -->
    </div>
  </body>
